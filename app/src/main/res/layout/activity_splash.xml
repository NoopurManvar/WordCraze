<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F5FF"
    android:paddingTop="20dp"
    android:clipToPadding="false">

    <!-- App Logo (slightly above center) -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="260dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35"
        android:layout_marginTop="100dp"/>

    <!-- Powered by text above footer -->
    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/footerBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Footer block: white background, short height, full width -->
    <LinearLayout
        android:id="@+id/footerBlock"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E0F5FF"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp">

        <!-- Logo inside footer -->
        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mulogo"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
