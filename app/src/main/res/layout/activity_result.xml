<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Confetti overlay -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#E0F5FF">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level Complete!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Stars (only for win) -->
        <LinearLayout
            android:id="@+id/starContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="Star 1" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_star_border"
                android:layout_marginStart="8dp"
                android:contentDescription="Star 2" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_star_border"
                android:layout_marginStart="8dp"
                android:contentDescription="Star 3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCoinsEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° +0 coins"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTotalCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’Ž Total: 0 coins"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="48dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnNextLevel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸš€ Next Level"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ  Home"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
